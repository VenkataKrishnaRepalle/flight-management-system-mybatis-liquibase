<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.learning.fmsmybatisliquibase.dao.UserRoleDao">
    <resultMap id="userRoleResult" type="com.learning.fmsmybatisliquibase.model.UserRole">
        <result property="userUuid" column="user_uuid" jdbcType="VARCHAR" javaType="java.util.UUID"
                typeHandler="com.learning.fmsmybatisliquibase.handler.UuidTypeHandler"/>
        <result property="role" column="role"/>
    </resultMap>

    <select id="getByUserUuid" resultMap="userRoleResult">
        SELECT *
        FROM user_role
        WHERE user_uuid = #{userUuid}
    </select>

    <insert id="insert" flushCache="true">
        INSERT INTO user_role(user_uuid, role)
        values (#{userRole.userUuid}, #{userRole.role})
    </insert>

    <delete id="delete" flushCache="true">
        DELETE
        FROM user_role
        WHERE user_uuid = #{userRole.userUuid}
          AND role = #{userRole.role}
    </delete>
</mapper>